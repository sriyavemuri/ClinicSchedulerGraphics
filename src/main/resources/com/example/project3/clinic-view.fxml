<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.project3.gui.ClinicManagerController"
            prefWidth="800" prefHeight="600">

    <SplitPane orientation="VERTICAL" dividerPositions="0.5"
               AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0"
               AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0">

        <ScrollPane fitToWidth="true" fitToHeight="true">
            <TabPane prefWidth="580" prefHeight="380">
                <tabs>

                    <Tab text="Schedule / Cancel">
                        <ScrollPane fitToWidth="true" fitToHeight="true">
                            <GridPane hgap="10" vgap="10">
                                <Label text="Appointment Date:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                                <DatePicker fx:id="appointmentDate" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                                <Label text="Patient Name:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                                <TextField fx:id="patientName" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                                <Label text="Provider Name:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                                <TextField fx:id="providerName" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                                <Label text="Follow-Up Date:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                                <DatePicker fx:id="followUpDate" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                                <Label text="Type of Visit:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                                <HBox spacing="10" GridPane.rowIndex="4" GridPane.columnIndex="1">
                                    <RadioButton fx:id="officeVisitRadio" text="Office Visit"/>
                                    <RadioButton fx:id="imagingServiceRadio" text="Imaging Service"/>
                                </HBox>

                                <Label text="Timeslot:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                                <ComboBox fx:id="timeslotCombo" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

                                <Label text="Provider:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
                                <ComboBox fx:id="providerCombo" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

                                <HBox spacing="10" GridPane.rowIndex="7" GridPane.columnIndex="1">
                                    <Button fx:id="scheduleButton" text="Schedule"/>
                                    <Button fx:id="cancelButton" text="Cancel"/>
                                    <Button fx:id="clearButton" text="Clear" onAction="#handleClear"/>

                                </HBox>
                            </GridPane>
                        </ScrollPane>
                    </Tab>

                    <Tab text="Reschedule">
                        <ScrollPane fitToWidth="true" fitToHeight="true">
                            <GridPane hgap="10" vgap="10">
                                <Label text="First Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                                <TextField fx:id="firstNameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                                <Label text="Last Name:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                                <TextField fx:id="lastNameField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                                <Label text="Date of Birth:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                                <DatePicker fx:id="dobPicker" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                                <Label text="New Date:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                                <DatePicker fx:id="newDatePicker" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                                <Label text="New Time:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                                <ComboBox fx:id="newTimeComboBox" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                                <HBox spacing="10" GridPane.rowIndex="5" GridPane.columnIndex="1">
                                    <Button fx:id="rescheduleButton" text="Reschedule"/>
                                    <Button fx:id="clearRescheduleButton" text="Clear" onAction="#handleClearReschedule"/>
                                </HBox>
                            </GridPane>
                        </ScrollPane>
                    </Tab>



                    <Tab text="Clinic Locations">
                        <ScrollPane fitToWidth="true" fitToHeight="true">
                            <VBox spacing="10">
                                <Label text="Clinic Locations" style="-fx-font-weight: bold;"/>
                                <TableView fx:id="clinicTable">
                                    <columns>
                                        <TableColumn fx:id="locationColumn" text="Location"/>
                                        <TableColumn fx:id="countyColumn" text="County"/>
                                        <TableColumn fx:id="zipColumn" text="Zip Code"/>
                                    </columns>
                                </TableView>
                                <!-- Removed duplicate ComboBoxes -->
                            </VBox>
                        </ScrollPane>
                    </Tab>
                </tabs>
            </TabPane>
        </ScrollPane>

        <VBox spacing="10">
            <Label text="Output:" style="-fx-font-weight: bold;"/>
            <TextArea fx:id="outputArea" prefHeight="150" wrapText="true"/>
            <Button fx:id="loadProvidersButton" text="Load Providers"/> <!-- Added missing button -->
        </VBox>

    </SplitPane>
</AnchorPane>
